<% projectCoverClass = locals.large ? 'project-cover-large' : '' %>
<% projectGridClass = locals.large ? 'project-grid-large' : '' %>
<div class="project-grid <%= projectGridClass %>">
  <% projects.forEach(project => { %>
    <a style="text-decoration: none;" href="/projects/<%= project.id %>">
      <img class="project-cover <%= projectCoverClass %>" src="<%= project.coverImagePath %>">
      <p style="margin-top:10px"><%= project.title %> â€¢ Submitted by <%= project.author %></p>
    </a>
  <% }) %>
</div>